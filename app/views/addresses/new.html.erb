<h2 class="head">Add Address</h2>
<div class="container main-form">
  <div class="card shadow-sm p-3">
    <div class="card-body">
      <%= form_for [@user, @address], local: true do |form| %>
        
        <div class="form-group">
          <%= form.label :pincode, for: "pincode" %><br>
          <%= form.text_field :pincode, class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= form.label :landmark, for: "landmark" %><br>
          <%= form.text_field :landmark, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :street, for: "street" %><br>
          <%= form.text_field :street, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :apartment_name, for: "apartment_name" %><br>
          <%= form.text_field :apartment_name, class: "form-control" %>
        </div>
         
        <div class="form-group">
          <%= form.select :country, collection: Address.countries.keys.to_a, class: "custom-select" %>
        </div>

        <div class="form-group">
          <%= form.select :state, collection: Address.states.keys.to_a, class: "custom-select" %>
        </div>

        <div class="form-group">
          <%= form.select :city, collection: Address.cities.keys.to_a, class: "custom-select" %>
        </div>

        <div class="form-group">
          <%= form.submit "Submit", class: 'btn btn-primary ml-1' %>  
        </div>

      <% end %>
    </div>  
  </div>
</div>    



