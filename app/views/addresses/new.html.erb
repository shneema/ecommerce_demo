<h2 class="head">Add Address</h2>
<div class="container main-form">
  <div class="card shadow-sm p-3">
    <div class="card-body">
      <%= form_for @address, local: true do |form| %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <div class="form-group">
          <%= form.label :address1, for: "address1" %><br>
          <%= form.text_field :address1, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :address2, for: "address2" %><br>
          <%= form.text_field :address2, class: "form-control" %>
        </div>
         
        <div class="form-group">
          <%= form.select(:country, Address.countries.keys.to_a, {}, { class: "custom-select" })%>
        </div>

        <div class="form-group">
          <%= form.select(:state, Address.states.keys.to_a, {},  { class: "custom-select" }) %>
        </div>

        <div class="form-group">
          <%= form.select(:city, Address.cities.keys.to_a, {}, { class: 'custom-select' }) %>
        </div>

        <div class="form-group">
          <%= form.label :pincode, for: "pincode" %><br>
          <%= form.text_field :pincode, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Submit", class: 'btn btn-primary ml-1' %>  
        </div>

      <% end %>
    </div>  
  </div>
</div>    
