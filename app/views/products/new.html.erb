<h2 class="head">Add Product</h2>
<div class="container main-form">
  <div class="card shadow-sm p-3">
    <div class="card-body">
      <%= form_for @product, local: true do |form| %>
        
        <div class="form-group">
          <%= form.label :name, for: "name" %><br>
          <%= form.text_field :name, class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= form.label :price, for: "price" %><br>
          <%= form.text_area :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :quantity, for: "quantity" %><br>
          <%= form.text_area :quantity, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.select(:status, Product.statuses.keys.to_a, {}, { class: 'custom-select' }) %>
        </div>

        <div class="form-group">
          <%= form.label :category, for: "category" %><br>
          <%= form.select(:category_id, Category.all.map{ |category| [category.name, category.id] }, {}, { class: "form-control" }) %>
        </div>
         
        <div class="form-group">
          <%= form.submit "Submit", class: 'btn btn-primary ml-1' %>  
        </div>

      <% end %>
    </div>  
  </div>
</div>    
